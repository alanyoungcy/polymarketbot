# =============================================================================
# Polymarket Go Bot — Environment Variables
# Copy to .env and fill in your values. Never commit .env to git.
# =============================================================================

# ── Wallet ──
POLYBOT_WALLET_PRIVATE_KEY=0x...           # Raw hex private key (or leave blank and use encrypted file)
POLYBOT_WALLET_SAFE_ADDRESS=0x...          # Polymarket proxy wallet (Gnosis Safe)
POLYBOT_WALLET_KEY_PASSWORD=               # Password for encrypted key file (if using)

# ── Builder Program (gasless transactions) ──
POLYBOT_BUILDER_API_KEY=
POLYBOT_BUILDER_API_SECRET=
POLYBOT_BUILDER_API_PASSPHRASE=

# ── Kalshi (optional, for arbitrage mode) ──
POLYBOT_KALSHI_API_KEY=
POLYBOT_KALSHI_RSA_PRIVATE_KEY_PATH=       # Path to RSA private key PEM file

# ── Supabase / PostgreSQL ──
POLYBOT_SUPABASE_DSN=                     # Preferred: full DSN, e.g. postgresql://user:pass@host:5432/postgres?sslmode=require
POLYBOT_SUPABASE_HOST=localhost
POLYBOT_SUPABASE_PORT=5432
POLYBOT_SUPABASE_DATABASE=postgres
POLYBOT_SUPABASE_USER=postgres
POLYBOT_SUPABASE_PASSWORD=postgres
POLYBOT_SUPABASE_SSLMODE=disable           # "require" for production Supabase
POLYBOT_SUPABASE_API_URL=                  # https://xxxx.supabase.co (for Auth/Realtime)
POLYBOT_SUPABASE_API_KEY=                  # service_role key

# ── Redis ──
POLYBOT_REDIS_ADDR=localhost:6379
POLYBOT_REDIS_PASSWORD=
POLYBOT_REDIS_DB=0

# ── S3-Compatible Storage (iDrive e2, MinIO, AWS S3, Cloudflare R2) ──
POLYBOT_S3_ENDPOINT=https://YOUR_ENDPOINT.e2.idrivee2.com   # iDrive e2 endpoint
POLYBOT_S3_REGION=us-east-1                                  # iDrive e2 region
POLYBOT_S3_BUCKET=polybot-data
POLYBOT_S3_ACCESS_KEY=                     # iDrive e2 Access Key
POLYBOT_S3_SECRET_KEY=                     # iDrive e2 Secret Key
POLYBOT_S3_USE_SSL=true
POLYBOT_S3_FORCE_PATH_STYLE=true           # Required for iDrive e2 and MinIO

# ── Notifications (optional) ──
POLYBOT_NOTIFY_TELEGRAM_TOKEN=
POLYBOT_NOTIFY_TELEGRAM_CHAT_ID=
POLYBOT_NOTIFY_DISCORD_WEBHOOK_URL=

# ── Pipeline (Goldsky) ──
POLYBOT_PIPELINE_GOLDSKY_URL=             # public: https://api.goldsky.com/api/public/.../gn  private: https://api.goldsky.com/api/private/.../gn
POLYBOT_PIPELINE_GOLDSKY_API_KEY=         # required for private Goldsky endpoint

# ── Server ──
POLYBOT_SERVER_PORT=8000
POLYBOT_SERVER_AUTH_TOKEN=                  # Bearer token for API auth

# ── General ──
POLYBOT_MODE=trade                         # trade, arbitrage, monitor, scrape, backtest, server, full
POLYBOT_LOG_LEVEL=info                     # debug, info, warn, error
